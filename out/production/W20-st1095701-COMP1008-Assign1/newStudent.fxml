            </Button>
         </bottom>
         <padding>
            <Insets bottom="16.0" top="16.0" />
         </padding>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="40.0" prefWidth="350.0">
                     <children>
                        <Label fx:id="lbl_fName" layoutX="14.0" layoutY="11.0" text="First Name">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txt_fName" layoutX="165.0" layoutY="7.0" promptText="Letters only" />
                     </children>
                  </Pane>
                   <Pane prefHeight="40.0" prefWidth="350.0">
                       <children>
                           <Label fx:id="lbl_lName" layoutX="14.0" layoutY="11.0" text="Last Name">
                               <font>
                                   <Font size="14.0" />
                               </font>
                           </Label>
                           <TextField fx:id="txt_lName" layoutX="165.0" layoutY="7.0" promptText="Letters only" />
                       </children>
                   </Pane>
                   <Pane prefHeight="40.0" prefWidth="350.0">
                       <children>
                           <Label fx:id="lbl_sNum" layoutX="14.0" layoutY="11.0" text="Student Number">
                               <font>
                                   <Font size="14.0" />
                               </font>
                           </Label>
                           <TextField fx:id="txt_sNum" editable="false" layoutX="165.0" layoutY="7.0" />
                       </children>
                   </Pane>
                  <Pane prefHeight="40.0" prefWidth="355.0">
                     <children>
                        <DatePicker fx:id="datePicker" layoutX="165.0" layoutY="7.0" prefHeight="26.0" prefWidth="169.0" />
